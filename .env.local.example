# ========== AUTHENTICATION ==========
# NextAuth Configuration
NEXTAUTH_SECRET=your-secret-key-here-min-32-chars
NEXTAUTH_URL=http://localhost:3000

# GitHub OAuth (for authentication)
GITHUB_ID=your_github_oauth_app_id
GITHUB_SECRET=your_github_oauth_secret

# ========== DATABASE ==========
# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ========== PAYMENT PROVIDER: LEMONSQUEEZY ==========
# Primary payment provider (recommended)
LEMONSQUEEZY_API_KEY=your_lemonsqueezy_api_key
LEMONSQUEEZY_STORE_ID=your_lemonsqueezy_store_id
LEMONSQUEEZY_WEBHOOK_SECRET=your_lemonsqueezy_webhook_secret

# ========== PAYMENT PROVIDER: FLUTTERWAVE (Optional) ==========
# Secondary payment provider for international support
FLW_PUBLIC_KEY=your_flutterwave_public_key
FLW_SECRET_KEY=your_flutterwave_secret_key

# ========== EMAIL SERVICE ==========
# Resend for transactional emails
RESEND_API_KEY=your_resend_api_key
NEXT_PUBLIC_EMAIL_FROM=noreply@yourdomain.com

# ========== APPLICATION ==========
# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# AI Provider (xAI Grok)
XAI_API_KEY=your_xai_api_key

# GitHub API (for repo creation/export features)
GITHUB_API_TOKEN=your_github_personal_access_token

# ========== MONITORING & ANALYTICS ==========
# Sentry for error tracking
NEXT_PUBLIC_SENTRY_AUTH_TOKEN=your_sentry_token
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# ========== DEVELOPMENT ==========
# Enable debug logging
DEBUG=false
NODE_ENV=development

# ========== NOTES ==========
# For local development:
# 1. Copy this file: cp .env.local.example .env.local
# 2. Fill in your actual API keys
# 3. Never commit .env.local to version control
# 4. Use ngrok for webhook testing: ngrok http 3000
#    Then update NEXT_PUBLIC_APP_URL=https://your-ngrok-id.ngrok.io
#
# For production deployment (Vercel):
# 1. Go to Vercel dashboard → Project Settings → Environment Variables
# 2. Add each variable from this file
# 3. Ensure NEXT_PUBLIC_APP_URL matches your domain
# 4. Update webhook URLs in Lemonsqueezy dashboard
