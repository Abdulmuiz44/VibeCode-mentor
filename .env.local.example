# Mistral AI API Key
# Get your API key from https://console.mistral.ai/
MISTRAL_API_KEY=your_mistral_api_key_here

# Supabase Configuration (NEW - Primary Database & Auth)
# Get your config from https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Firebase Configuration (DEPRECATED - Will be migrated to Supabase)
# Get your config from https://console.firebase.google.com/
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here

# Flutterwave API Keys
# Get your keys from https://dashboard.flutterwave.com/dashboard/settings/apis
FLW_PUBLIC_KEY=FLWPUBK_TEST-your_public_key_here
FLW_SECRET_KEY=FLWSECK_TEST-your_secret_key_here
FLW_ENCRYPTION_KEY=FLWSECK_TEST-your_encryption_key_here
FLW_SECRET_HASH=your_webhook_secret_hash_here

# Vercel KV (Redis)
# Get your credentials from https://vercel.com/dashboard/stores
KV_URL=your_kv_url_here
KV_REST_API_URL=your_kv_rest_api_url_here
KV_REST_API_TOKEN=your_kv_rest_api_token_here
KV_REST_API_READ_ONLY_TOKEN=your_kv_read_only_token_here

# Admin Dashboard
# Set a secure password for the admin dashboard at /admin
ADMIN_PASSWORD=your_secure_admin_password_here

# Resend Email Service (NEW)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# Google Analytics 4 (NEW)
